// manifest how-to => https://developer.chrome.com/extensions/manifest
// possibly how we should link stuff => chrome-extension://__MSG_@@extension_id__/index.html
{
  "short_name": "TurtleTab",
  "name": "TurtleTab",
  "manifest_version": 2,
  "version": "0.0",
  "start_url": "./index.html",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",

  "default_locale": "en",
  "description": "Chrome extension with built-in weather, todo, notes, and google search functions",
  "icons": [
      {
        "src": "favicon.ico",
        "sizes": "192x192",
        "type": "image/png"
      }
  ],

  "browser_action": {

  },
  "author": "Chingu Voyage2-Turtles-11",
  "background": {
    "page": "index.html",
  },
  // overrides newTabs in Chrome to the following link
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "geolocation",
    "history",
    "storage",
    "topSites",
    "management", // list of extensions/apps that are installed and running
  ],
  // externally_connectable allows extension and app IDS to connect with our app
  "externally_connectable": {
    "ids": [
      "*" // this will match all extensions and apps
    ],
    // Match patterns for web pages. Does not affect content scripts.
    // If this field is not specified, no webpages can connect.
    "matches": [
      "https://*.google.com/*"
    ]
  },
  "incognito": "not_allowed",
}
